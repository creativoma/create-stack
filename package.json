{
  "name": "@creativoma/create-stack",
  "version": "0.0.4",
  "description": "Interactive CLI to scaffold your perfect project stack",
  "type": "module",
  "bin": {
    "create-stack": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/creativoma/create-stack.git"
  },
  "bugs": {
    "url": "https://github.com/creativoma/create-stack/issues"
  },
  "homepage": "https://github.com/creativoma/create-stack#readme",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsc && node dist/index.js",
    "build": "tsc",
    "prepublishOnly": "pnpm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "cli",
    "scaffold",
    "boilerplate",
    "create",
    "vite",
    "react",
    "vue",
    "svelte",
    "nextjs",
    "astro",
    "prisma",
    "drizzle",
    "database",
    "typescript",
    "tailwind",
    "starter",
    "template"
  ],
  "author": {
    "name": "creativoma"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "execa": "^8.0.1",
    "fs-extra": "^11.3.3",
    "gradient-string": "^2.0.2",
    "ora": "^7.0.1",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/fs-extra": "^11.0.4",
    "@types/gradient-string": "^1.1.6",
    "@types/node": "^25.0.3",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "4.0.16",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.19.0",
    "vitest": "^4.0.16"
  }
}